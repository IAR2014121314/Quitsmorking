<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="340dp"
        android:id="@+id/friend_image"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Birthday"
        android:id="@+id/friend_birthday"
        android:layout_gravity="right|bottom"
        android:layout_below="@+id/friend_name"
        android:layout_alignStart="@+id/friend_name"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="John smith"
        android:id="@+id/friend_name"
        android:textSize="30dp"
        android:layout_gravity="right|center_vertical"
        android:layout_below="@+id/friend_image"
        android:layout_centerHorizontal="true" />

    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="いいね"
        android:id="@+id/m1_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="がんばれ！"
        android:id="@+id/m2_button"
        android:layout_alignTop="@+id/m1_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ダメね。"
        android:id="@+id/m3_button"
        android:singleLine="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Count"
        android:id="@+id/friend_total_count"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gender"
        android:id="@+id/friend_gender"
        android:layout_alignTop="@+id/friend_birthday"
        android:layout_alignStart="@+id/friend_total_count" />
</RelativeLayout>